{
    "env": {
        "es2022": true,
        "node": true,
        "jest/globlas": true
    },
    "extends": ["standard-with-typescript", "plugin:jest/recommended", "plugin:jest/style"],
    "plugins": ["@typescript-eslint/eslint-plugin", "prettier", "eslint-plugin-import", "jest"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "warn",
      "max-len": ["warn", 120]
    },
    "ignorePatterns": ["/node_modules/", "/dist/", "/.vscode/", "/coverage/"]
}
