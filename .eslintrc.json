{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": [ "error",
            {
              "endOfLine": "auto"
            }
          ]
    }
}
