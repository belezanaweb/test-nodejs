generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Warehouse {
  warehouseId String    @id @default(uuid())
  locality    String
  quantity    Int
  type        String
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [inventoryId])
}

model Inventory {
  inventoryId String      @id @default(uuid())
  productId   String
  Product     Product     @relation(fields: [productId], references: [productId])
  Warehouse   Warehouse[]
}

model Product {
  productId String      @id @default(uuid())
  sku       String
  name      String
  Inventory Inventory[]
}
