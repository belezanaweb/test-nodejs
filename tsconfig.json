{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",

    "allowJs": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"

  ]
}
